<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinHeight="600" MinWidth="600"
        Height="600" Width="600"
        x:Class="Pokemon.PopupWindow"
        Title="PopupWindow">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Name="Status" FontSize="30" FontWeight="Bold"/>
        <Image Name="Image" Width="250"/>
        <TextBlock Name="Title"  FontSize="26"/>
        <Button Click="Button_OnClick">Подробнее..</Button>
    </StackPanel>
</Window>
